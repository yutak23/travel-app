{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		"group:allNonMajor",
		":separateMultipleMajorReleases",
		":prConcurrentLimitNone",
		":prHourlyLimitNone",
		":timezone(Asia/Tokyo)",
		":doNotPinPackage(@popperjs/core)",
		":doNotPinPackage(axios)",
		":doNotPinPackage(bootstrap)",
		":doNotPinPackage(bootstrap-suggest)",
		":doNotPinPackage(core-js)",
		":doNotPinPackage(cors)",
		":doNotPinPackage(express)",
		":doNotPinPackage(jquery)",
		":doNotPinPackage(regenerator-runtime)",
		":doNotPinPackage(toastify-js)",
		":doNotPinPackage(webpack)",
		":doNotPinPackage(webpack-cli)"
	],
	"labels": ["renovate"],
	"enabledManagers": ["npm"],
	"major": { "labels": ["renovate", "update_major"] },
	"platformAutomerge": true,
	"packageRules": [
		{
			"description": "Automerge non-major updates",
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true
		}
	],
	"ignoreDeps": [""]
}
